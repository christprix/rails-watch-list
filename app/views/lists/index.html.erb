<div class="text-center">
  <div class="banner"style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://res.cloudinary.com/dm54zi0ff/image/upload/v1689141641/pexels-paul-volkmer-1790556_b2alhm.jpg')" >
    <h1>Movie Watch Lists</h1>
  </div>
  <div class="container text-center my-4">
      <div class="cards">
        <% @lists.each do |list| %>
          <div class="card-category my-4"style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 500, crop: :fill %>')">
              <h2><%= link_to list.name, list_path(list), style: "color:white" %></h2>
          </div>
        <% end %>
      </div>
  </div>
</div>
